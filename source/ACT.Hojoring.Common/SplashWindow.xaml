    <StackPanel Panel.ZIndex="-1" VerticalAlignment="Center" HorizontalAlignment="Center">
      <Grid Margin="0 0 0 0">
        <Label x:Name="ReiwaLabel" Content="令" Foreground="#adadad" FontSize="40" FontFamily="{Binding ReiwaFont, Mode=OneWay}">

          <Label.Effect>
            <DropShadowEffect Opacity="0.3" Direction="0" ShadowDepth="0" Color="#e7e7eb" BlurRadius="6" />
          </Label.Effect>

        </Label>

        <Label Style="{DynamicResource ReiwaLabelStyle}" />
